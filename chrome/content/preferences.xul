			</richlistitem>
			<richlistitem>
				<label value="&easymathGreek.psi;" />
				<checkbox label="Ψ" />
				<checkbox label="ψ" />
			</richlistitem>
			<richlistitem>
				<label value="&easymathGreek.omega;" />
				<checkbox label="Ω" />
				<checkbox label="ω" />
			</richlistitem>
		</richlistbox>
	</prefpane>
	<script src="chrome://easymath/content/preferences.js" type="text/javascript" />
</prefwindow>