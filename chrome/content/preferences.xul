			</richlistitem>
			<richlistitem>
				<label value="&easymathGreek.pi;" />
				<checkbox label="Π" />
				<checkbox label="π" />
			</richlistitem>
			<richlistitem>
				<label value="&easymathGreek.rho;" />
				<checkbox label="Ρ" />
				<checkbox label="ρ" />
			</richlistitem>
			<richlistitem>
